<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<com.coboltforge.dontmind.multivnc.VncCanvas
    	android:id="@+id/vnc_canvas"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_gravity="bottom|center"
    	>
	</com.coboltforge.dontmind.multivnc.VncCanvas>

	<com.coboltforge.dontmind.multivnc.TouchPointView
    	android:id="@+id/touchpoints"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_gravity="bottom|center"
    	android:visibility="gone"
    />

	<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom">

		<com.coboltforge.dontmind.multivnc.ZoomControls
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	   		android:id="@+id/zoomer"
    		android:layout_gravity="center|bottom"
		/>

	  <LinearLayout
	      android:id="@+id/virtualmousebuttons"
	      android:orientation="horizontal"
	      android:layout_width="fill_parent"
	      android:layout_height="70dip">
	      <com.coboltforge.dontmind.multivnc.MouseButtonView
	      	  android:id="@+id/mousebutton1"
	          android:gravity="center_horizontal"
	          android:background="#997f7f7f"
	          android:layout_width="wrap_content"
	          android:layout_height="fill_parent"
	          android:layout_weight="1"/>
	      <com.coboltforge.dontmind.multivnc.MouseButtonView
	       	  android:id="@+id/mousebutton2"
	          android:gravity="center_horizontal"
	          android:background="#bb7f7f7f"
	          android:layout_width="wrap_content"
	          android:layout_height="fill_parent"
	          android:layout_weight="1"/>
	      <com.coboltforge.dontmind.multivnc.MouseButtonView
	          android:id="@+id/mousebutton3"
	          android:gravity="center_horizontal"
	          android:background="#997f7f7f"
	          android:layout_width="wrap_content"
	          android:layout_height="fill_parent"
	          android:layout_weight="1"/>

	  </LinearLayout>

	 </LinearLayout>


</merge>
